[Unit]
Description=Terminal Web para rodar bos telegram via gotty
After=network.target

[Service]
User=admin
WorkingDirectory=/home/admin
ExecStart=/usr/local/bin/gotty -p 3133 -w sudo nano -l +12 /etc/systemd/system/bos-telegram.service
Restart=always
Environment=TERM=xterm

[Install]
WantedBy=multi-user.target

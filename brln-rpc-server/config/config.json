{
  "server": {
    "port": 5003,
    "secretKey": "brln-os-secret-key-change-in-production",
    "allowedIps": ["127.0.0.1", "localhost", "0.0.0.0"],
    "cors": {
      "origins": ["*"]
    }
  },
  "lnd": {
    "host": "localhost:10009",
    "tlsCertPath": "/data/lnd/tls.cert",
    "macaroonPath": "/data/lnd/data/chain/bitcoin/testnet/admin.macaroon"
  },
  "elements": {
    "rpcHost": "localhost",
    "rpcPort": 7040,
    "rpcUser": "elementsuser",
    "rpcPassword": "elementspassword123",
    "network": "liquidv1"
  },
  "webhooks": {
    "enabled": false,
    "timeout": 10000,
    "retryAttempts": 3,
    "retryDelay": 5000,
    "defaultHeaders": {
      "User-Agent": "BRLN-RPC-Webhook/1.0",
      "Content-Type": "application/json"
    },
    "logFailures": true,
    "saveFailedWebhooks": false
  },
  "logging": {
    "level": "info",
    "filename": "logs/brln-rpc-server.log"
  },
  "docker": {
    "composeFile": "/root/brln-os/container/docker-compose.yml",
    "services": {
      "lnd": "lnd",
      "bitcoin": "bitcoin", 
      "elements": "elements",
      "lnbits": "lnbits",
      "thunderhub": "thunderhub",
      "lndg": "lndg",
      "peerswap": "peerswap",
      "tor": "tor"
    }
  }
}

# LNbits Configuration File
# Copy this file to .env and modify as needed

# Basic Configuration
LNBITS_ADMIN_UI=true
LNBITS_ALLOWED_USERS=""
LNBITS_ADMIN_USERS=""
LNBITS_HIDE_API=false
LNBITS_DENOMINATION=sat

# Database Configuration
LNBITS_DATABASE_URL="sqlite:///data/database.sqlite3"

# Lightning Backend Configuration
# Para usar com LND local via REST API
LNBITS_BACKEND_WALLET_CLASS=LndRestWallet
LND_REST_ENDPOINT=https://lnd:8080
LND_REST_CERT=/app/lnd-certs/tls.cert
LND_REST_MACAROON=/app/lnd-certs/admin.macaroon

# Alternatively, use LND via gRPC
# LNBITS_BACKEND_WALLET_CLASS=LndWallet
# LND_GRPC_ENDPOINT=lnd:10009
# LND_GRPC_CERT=/app/lnd-certs/tls.cert
# LND_GRPC_MACAROON=/app/lnd-certs/admin.macaroon

# Server Configuration
HOST=0.0.0.0
PORT=5000
DEBUG=false

# Security
LNBITS_SECRET_KEY=""

# Extensions
LNBITS_DISABLED_EXTENSIONS=""
LNBITS_ADMIN_EXTENSIONS=""

# Tor Support (opcional)
LNBITS_FORCE_HTTPS=false

# Branding
LNBITS_SITE_TITLE="BRLN Lightning Wallet"
LNBITS_SITE_TAGLINE="Bitcoin Lightning Wallet - BRLN Full Auto"
LNBITS_SITE_DESCRIPTION="Lightning Network Wallet powered by BRLN Full Auto"

# Rate Limiting
LNBITS_RATE_LIMIT_NO=200
LNBITS_RATE_LIMIT_PER=minute

# WebLN
LNBITS_WEBLN_DOMAIN=""

# Logging
LNBITS_LOG_LEVEL=INFO

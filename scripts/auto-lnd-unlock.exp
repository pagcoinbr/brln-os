#!/usr/bin/expect -f

# BRLN-OS Automated LND Wallet Unlock Script
# Uses expect to automate lncli unlock
# Reads password from password.txt file for security

set timeout 30

# Read password from file
set password_file "password.txt"
if {![file exists $password_file]} {
    puts "‚ùå Error: password.txt file not found"
    exit 1
}

set fp [open $password_file r]
set wallet_password [string trim [read $fp]]
close $fp

if {$wallet_password eq ""} {
    puts "‚ùå Error: password.txt is empty"
    exit 1
}

puts "üîì Starting automated LND wallet unlock..."
puts "üîê Reading password from password.txt"

# Start lncli unlock
spawn lncli unlock

# Handle the interactive prompts
expect {
    "Input wallet password:" {
        send "$wallet_password\r"
        exp_continue
    }
    "*successfully unlocked*" {
        puts "\n‚úÖ LND wallet successfully unlocked!"
        exit 0
    }
    "*invalid passphrase*" {
        puts "\n‚ùå Invalid password for LND wallet"
        exit 1
    }
    "*wallet not found*" {
        puts "\n‚ùå LND wallet not found - need to create wallet first"
        exit 1
    }
    timeout {
        puts "\n‚ùå Timeout waiting for lncli unlock"
        exit 1
    }
    eof {
        puts "\n‚úÖ Unlock process completed"
        exit 0
    }
}

# Wait a bit more for any final output
sleep 2